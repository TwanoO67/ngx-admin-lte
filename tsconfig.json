{
  "include": [
      "src/**/*.ts"
  ],
  "exclude": [
      "dist",
      "node_modules",
      "**/*.spec.ts"
  ],
  "compileOnSave": false,
  "compilerOptions": {
    "rootDir": "./src",
    "module": "es2015",
    "target": "es5",
    "declaration": true,
    "moduleResolution": "node",
    "outDir": "./dist",
    "sourceMap": true,
    "lib": [
      "dom",
      "es2015"
    ],
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "skipLibCheck": true
  },
  "angularCompilerOptions": {
    "annotateForClosureCompiler": true,
    "flatModuleId": "ngx-admin-lte",
    "flatModuleOutFile": "ngx-admin-lte.js",
    "skipTemplateCodegen": true,
    "strictMetadataEmit": true
  }
}
